    "version": "0.2.0",
    "configurations": [
        {
            "name": "Trunk Serve",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "trunk",
            "args": [
                "serve"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            },
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}